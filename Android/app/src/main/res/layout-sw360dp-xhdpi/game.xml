<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bggame"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3F51B5">

        <ImageView
            android:id="@+id/androidAI"
            android:layout_width="50dp"
            android:layout_height="22dp" />

        <TextView
            android:id="@+id/TextView02"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginLeft="10dp"
            android:text="@string/score"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/scorecomputer"
            android:layout_width="69dp"
            android:layout_height="22dp"
            android:textColor="@color/black"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cinquenta"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/black" />

            <GridView
                android:id="@+id/ko"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:background="#200A"
                android:columnWidth="40dp"
                android:numColumns="12"
                android:verticalSpacing="40dp"
                android:stretchMode="spacingWidthUniform"
                android:focusable="false">

            </GridView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dez"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/black" />

            <GridView
                android:id="@+id/tan"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:background="#200A"
                android:columnWidth="40dp"
                android:numColumns="12"
                android:verticalSpacing="40dp"
                android:stretchMode="spacingWidthUniform"
                android:focusable="false">

            </GridView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dez"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/black" />

            <GridView
                android:id="@+id/tane"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:background="#200A"
                android:columnWidth="40dp"
                android:numColumns="12"
                android:verticalSpacing="40dp"
                android:stretchMode="spacingWidthUniform"
                android:focusable="false">

            </GridView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zero"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/black" />

            <GridView
                android:id="@+id/kasu"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="0dp"
                android:background="#200A"
                android:columnWidth="40dp"
                android:numColumns="12"
                android:verticalSpacing="40dp"
                android:stretchMode="spacingWidthUniform"
                android:focusable="false">

            </GridView>
        </LinearLayout>

    </LinearLayout>

    <GridView
        android:id="@+id/computer"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:numColumns="8"
        android:verticalSpacing="40dp" />
        
    <LinearLayout
        android:id="@+id/linearh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#9a341500"
        android:orientation="horizontal" >

	     <GridView
	         android:id="@+id/table"
	         android:layout_width="310dp"
	         android:layout_height="match_parent"
             android:layout_marginLeft="0dp"
	         android:layout_marginRight="0dp"
	         android:layout_marginTop="0dp"
	         android:columnWidth="45dp"
	         android:numColumns="9"
             android:stretchMode="spacingWidthUniform"
             android:layout_gravity="center"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <GridView
                 android:id="@+id/deck"
                 android:layout_width="fill_parent"
                 android:layout_height="75dp"
                android:horizontalSpacing="60dp" />

            <Button
                android:id="@+id/descartzone"
                android:layout_width="40dp"
                android:layout_height="55dp"
                android:horizontalSpacing="60dp"
                android:background="#e4948029"
                android:layout_gravity="right" />

        </LinearLayout>

    </LinearLayout>
    
    <GridView
        android:id="@+id/player"
        android:layout_width="fill_parent"
        android:layout_height="65dp"
        android:layout_marginTop="10dp"
        android:numColumns="8"
        android:verticalSpacing="50dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3F51B5">

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="@string/score"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/scoreplayer"
            android:layout_width="69dp"
            android:layout_height="25dp"
            android:textColor="@color/black"
            android:textSize="15sp" />

    </LinearLayout>		

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cinquenta"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/black" />

            <GridView
                android:id="@+id/kop"
                android:layout_height="40dp"
                android:layout_marginLeft="0dp"
                android:background="#200A"
                android:columnWidth="40dp"
                android:numColumns="12"
                android:verticalSpacing="40dp"
                android:stretchMode="spacingWidthUniform"
                android:layout_width="wrap_content"
                android:focusable="false">

            </GridView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dez"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/black" />

            <GridView
                android:id="@+id/tanp"
                android:layout_height="40dp"
                android:layout_marginLeft="0dp"
                android:background="#200A"
                android:columnWidth="40dp"
                android:numColumns="12"
                android:verticalSpacing="40dp"
                android:stretchMode="spacingWidthUniform"
                android:layout_width="wrap_content"
                android:focusable="false">

            </GridView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dez"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/black" />

            <GridView
                android:id="@+id/tanep"
                android:layout_height="40dp"
                android:layout_marginLeft="0dp"
                android:background="#200A"
                android:columnWidth="40dp"
                android:numColumns="12"
                android:verticalSpacing="40dp"
                android:stretchMode="spacingWidthUniform"
                android:layout_width="wrap_content"
                android:focusable="false">

            </GridView>
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zero"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/black" />

            <GridView
                android:id="@+id/kasup"
                android:layout_height="40dp"
                android:layout_marginLeft="0dp"
                android:background="#200A"
                android:columnWidth="40dp"
                android:numColumns="12"
                android:verticalSpacing="40dp"
                android:stretchMode="spacingWidthUniform"
                android:layout_width="wrap_content"
                android:focusable="false">

            </GridView>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
